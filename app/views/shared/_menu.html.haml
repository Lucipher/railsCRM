    %li= link_to "Leads", leads_path
    %li
      .btn-group
        = link_to current_user.name, '#', :class => "btn btn-primary"
        %a.btn.btn-primary.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
          %span.caret
        %ul.dropdown-menu
          %li= link_to "Edit Profile", current_user
          %li= link_to "Logout", destroy_user_session_path
