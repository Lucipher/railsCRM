%div#login
  %div#login-wrapper
    %div#login-top
      %h2 Sign Up
    %div#login-content
      = simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
        = devise_error_messages!
        = simple_fields_for :organisation do |o|
          = o.input :name, :hint => "Please fill in your Organisation Name"
        = f.input :username
        = f.input :first_name
        = f.input :last_name
        = f.input :email
        = f.input :password
        = f.input :password_confirmation
        = f.submit "Sign up"
      = render :partial => "devise/shared/links"
